@model IEnumerable<SD_3200_.Models.cours>
@{
    if (Session["userEmail"] == null)
    {
        Layout = "~/Views/Shared/generalLayout.cshtml";
        Response.Redirect("~/Home/LoginPage");
    }
    else
    {
        Layout = "~/Views/Shared/adminLoginLayout.cshtml";
    }
}

<div align="center">
    @using (Html.BeginForm("adminEditCourse", "cours"))
    {
        <label for="course_name">Course Name:</label>
        <input type="text" class="form-control" id="course_name" name="course_name" placeholder="@ViewBag.course_desc" value="@ViewBag.course_name" >

        <br/>

        <label for="course_desc">Course Description:</label>
        <input type="text" class="form-control" id="course_desc" name="course_desc" placeholder="@ViewBag.course_desc" value="@ViewBag.course_desc">
        
        <br/>

        <label for="course_img">Course Image:</label>
        <input type="text" class="form-control" id="course_img" name="course_image" placeholder="@ViewBag.course_img" value="@ViewBag.course_img">
        <br/>

        <label for="course_duration">Course Duration:</label>
        <input type="number" class="form-control" id="course_duration" name="course_duration" placeholder="@ViewBag.course_duration" value="@ViewBag.course_duration">

        <br/>

        <label for="course_price">Course Price:</label>
        <input type="number" class="form-control" id="course_price" name="course_price" placeholder="@ViewBag.course_price" value="@ViewBag.course_price">
        
        <br/><br/>

        <button type="submit" name="editCourse" value="@ViewBag.course_ID">Edit</button>
    }
</div>

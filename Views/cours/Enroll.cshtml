@model IEnumerable<SD_3200_.Models.cours>
@{
    if (Session["userEmail"] == null)
    {
        Layout = "~/Views/Shared/generalLayout.cshtml";
        Response.Redirect("~/Home/LoginPage");
    }
    else
    {
        Layout = "~/Views/Shared/loginLayout.cshtml";
    }
}

<div align="center">
    <h1>
        Welcome @ViewBag.userName!
    </h1>
    @using (Html.BeginForm("EnrollCourse", "cours"))
    {
        <label for="course_name">Course Name:</label>
        <input type="text" class="form-control" id="course_name" name="course_name" placeholder="@ViewBag.course_name" value="@ViewBag.course_name" disabled>

        <br/>

        <label for="course_price">Course Price:</label>
        <input type="number" class="form-control" id="course_price" name="course_price" placeholder="@ViewBag.course_price" value="@ViewBag.course_price" disabled>
        
        <br/>
        
        <label for="course_price">Transaction ID:</label>
        <input type="text" class="form-control" id="transactionID" name="transactionID" placeholder="Enter Transaction ID" >
       
        <br/>

        <label for="course_price">Date:</label>
        <input type="text" class="form-control" id="Date" name="Date" placeholder="@ViewBag.date" value="@ViewBag.date" disabled>
        
        <br/><br/>

        <button class="btn btn-success" type="submit" name="course_ID" value="@ViewBag.course_ID">Enroll</button>
    }
</div>
